<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
{{#if success_message}}
    <div class="alert alert-success" role="alert">
        {{success_message}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{/if}}
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger" role="alert">
            {{message}}
            <a href="/home/complain"><button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button></a>
        </div>
    {{/each}}
{{/if}}
<div class="card col-sm-8">
	<br>
	<form action="/create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">User: </label>
        <label for="name">{{user.firstName}}</label>
    </div>
    <div class="form-group">
        <label for="title">Title: </label>
        <input type="text" name="title" class="form-control" id="title" placeholder="Enter the title">
    </div>

    <div class="form-group">
        <label for="location">Location: </label>
        <select name="building" id="building" class="form-control">
            <option value="">Select the Building</option>
            <option value="Building_1">Building 1</option>
            <option value="Building_2">Building 2</option>
        </select>
        <br>
        <select name="floor" id="floor" class="form-control">
            <option value="">Select the Floor</option>
            
        </select>
        <br>
        <select name="room" id="room" class="form-control">
            <option value="">Select the Room</option>
            
        </select>
    </div>

    <div class="form-group">
        <label for="file">File Upload: </label>
        <input type="file" name="file" class="form-control" id="file">
    </div>

    <div class="form-group">
        <label for="submitDate">Date to submit: </label>
        <input type="date" name="submitDate" class="form-control" id="submitDate">
    </div>

    <div class="form-group">
        <label for="categories">Categories</label>
        <select name="categories" id="categories" class="form-control">
            <option value="">Select a category</option>
            {{#each categories}}
                <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
    </div>

    <div class="form-group">
        <label for="importance">Importance: </label>
        <select name="importance" id="importance" class="form-control">
            <option value="">Select an Option</option>
            <option value="Low">Low</option>
            <option value="High">High</option>
        </select>
    </div>

    <!--<div class="form-check">
        <label for="allowComments"><input type="checkbox" name="allowComments" class="custom-checkbox" id="allowComments">  Allow Comments</label>
    </div>-->
    
    <div class="form-group">
        <label for="description">Description of the problem: </label>
        <textarea type="text" name="description" class="form-control" id="description" placeholder="Enter Description" cols="30" rows="8"></textarea>
    </div>
    <button type="submit" class="btn btn-outline-secondary">Submit</button>
    <br>
    <br>
</form>
</div>
</main>