<main role="main" class="col-md-12 ml-sm-auto col-lg-11 pt-5 px-2">
  <!-- Post Content Column -->
  <div class="col-lg-8">

    <!-- Title -->
    <h1 class="mt-4">{{complaint.title}}</h1>

    <!-- Author -->
    <p class="lead">
      by
      <a href="#">{{complaint.user}}</a>
    </p>

    <hr>

